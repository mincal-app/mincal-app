<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/arrow_back_settings"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_arrow_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Hey there, Joel!"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/arrow_back_settings"
        app:layout_constraintTop_toTopOf="@+id/arrow_back_settings"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/settings_home_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="What would you like to do?"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/settings_home_title"
        app:layout_constraintTop_toBottomOf="@+id/settings_home_title" />
    
    <!-- Fragment Containers -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_first_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_home_subtitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_second_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_first_row" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_third_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_second_row" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_fourth_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_third_row" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_fifth_row"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_fourth_row" />

</androidx.constraintlayout.widget.ConstraintLayout>